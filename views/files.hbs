<div class="container" style="margin: 20px; 0px;">

    <div class ="jumbotron">
        <h1>Games yaasssss :D</h1>
    </div>

    {{#each files}}
        <li class="list-group-item">{{this}}
            <form method="post" action="/files/delete/{{this}}">
                <button type="submit" class="right delete-button">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </form>
        </li>
    {{/each}}

    <br />

    <form method="post" action="/files/upload" enctype="multipart/form-data">
        <div class="input-group">
            <label class="input-group-btn">
                <span class="btn btn-primary">
                    Browse&hellip; <input type="file" name="upload" class="hidden" multiple>
                </span>
            </label>
            <input type="text" class="form-control" readonly>
        </div>
        <br />
        <button type="submit" class="btn btn-default">Upload</button>
    </form>

</div>